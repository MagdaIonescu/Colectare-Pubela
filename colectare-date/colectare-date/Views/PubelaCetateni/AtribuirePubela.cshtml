@model colectare_date.Models.PubelaCetateni
@{
    ViewData["Title"] = "Atribuire Pubela";
}

<h2>ATRIBUIE PUBELA</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="AtribuirePubela" method="post">
    <div class="form-group">
        <label for="CetateanId">Cetatean</label>
        <select asp-for="CetateanId" class="form-control" asp-items="@(new SelectList(ViewBag.Cetateni, "Id", "NumeComplet"))">
            <option value="">-- Selecteaza --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="PubelaId">Pubela</label>
        <select asp-for="PubelaId" class="form-control" asp-items="@(new SelectList(ViewBag.Pubele, "PubelaId", "PubelaId"))">
            <option value="">-- Selecteaza --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Adresa</label>
        <input asp-for="Adresa" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">ATRIBUIE</button>
</form>
